// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String    @id @default(cuid())
  email           String    @unique
  emailVerifiedAt DateTime?
  hashedPassword  String? // optional for OAuth-only users
  name            String?
  imageUrl        String?

  // housekeeping
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // relations
  accounts      Account[]
  refreshTokens RefreshToken[] // if you persist refresh tokens
  Session       Session[]
}

model Account {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id])

  // OAuth provider data
  provider          String // e.g., "google"
  providerAccountId String // provider's user id (sub)
  type              String // "oauth"
  accessToken       String?
  refreshToken      String?
  expiresAt         Int? // epoch seconds

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model VerificationToken {
  id         String   @id @default(cuid())
  identifier String // usually email
  token      String   @unique
  expiresAt  DateTime

  @@index([identifier])
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime

  @@index([userId])
}

model RefreshToken {
  id        String    @id @default(cuid())
  userId    String
  user      User      @relation(fields: [userId], references: [id])
  token     String    @unique
  revokedAt DateTime?
  expiresAt DateTime
  createdAt DateTime  @default(now())

  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id])
  sessionToken String   @unique
  expiresAt    DateTime
  createdAt    DateTime @default(now())

  @@index([userId])
}
